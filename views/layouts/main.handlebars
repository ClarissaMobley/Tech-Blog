<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Tech Blog</title>
    <link rel='stylesheet' href='/css/style.css' />
    <link
      rel='stylesheet'
      href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css'
    />
  </head>
  <body>
    {{! Header }}
    <header class='bg-dark text-white'>
      <nav class='navbar navbar-dark bg-dark'>
        <ul class='navbar-nav d-flex flex-row'>
          <li class='nav-item'>
            <a class='nav-link h5 mr-5' href='/'>Home</a>
          </li>
          <li class='nav-item'>
            <a class='nav-link h5 mr-5' href='/dashboard'>Dashboard</a>
          </li>
          {{#unless logged_in}}
            <li class='nav-item'>
              <a class='nav-link h5 mr-5' href='/login'>Login</a>
            </li>
          {{else}}
            <li class='nav-item'>
              <a class='nav-link h5 mr-5' id="logout" href='#'>Logout</a>
            </li>
          {{/unless}}
        </ul>
      </nav>
      <h1 class='text-left ml-3 pb-4'>{{pageTitle}}</h1>
    </header>

    {{{body}}}
    <script
      src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js'
    ></script>
    <script src='/js/logout.js'></script>
  </body>
</html>